    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="317dp"
        android:layout_height="358dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

    <Button
        android:id="@+id/p9"
        android:layout_width="87dp"
        android:layout_height="94dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageBack"
        app:layout_constraintEnd_toEndOf="@+id/imageBack"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/p8"
        app:layout_constraintTop_toBottomOf="@+id/p6"
        app:layout_constraintVertical_bias="0.581" />

    <Button
        android:id="@+id/p8"
        android:layout_width="92dp"
        android:layout_height="99dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageBack"
        app:layout_constraintStart_toEndOf="@+id/p7"
        app:layout_constraintTop_toBottomOf="@+id/p5"
        app:layout_constraintVertical_bias="0.231" />

    <Button
        android:id="@+id/p5"
        android:layout_width="90dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/p4"
        app:layout_constraintTop_toBottomOf="@+id/p2" />

    <Button
        android:id="@+id/p6"
        android:layout_width="84dp"
        android:layout_height="89dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageBack"
        app:layout_constraintHorizontal_bias="0.692"
        app:layout_constraintStart_toEndOf="@+id/p5"
        app:layout_constraintTop_toBottomOf="@+id/p3" />

    <Button
        android:id="@+id/p7"
        android:layout_width="87dp"
        android:layout_height="105dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageBack"
        app:layout_constraintStart_toStartOf="@+id/imageBack"
        app:layout_constraintTop_toBottomOf="@+id/p4"
        app:layout_constraintVertical_bias="0.141" />

    <Button
        android:id="@+id/p3"
        android:layout_width="86dp"
        android:layout_height="108dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageBack"
        app:layout_constraintStart_toEndOf="@+id/p2"
        app:layout_constraintTop_toTopOf="@+id/imageBack" />

    <Button
        android:id="@+id/p4"
        android:layout_width="97dp"
        android:layout_height="98dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/imageBack"
        app:layout_constraintTop_toBottomOf="@+id/p1" />

    <Button
        android:id="@+id/p2"
        android:layout_width="105dp"
        android:layout_height="112dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/p1"
        app:layout_constraintTop_toTopOf="@+id/imageBack" />

    <ImageView
        android:id="@+id/HowPlay"
        android:layout_width="351dp"
        android:layout_height="90dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/xplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBack"

        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/p1"
        android:layout_width="94dp"
        android:layout_height="106dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00F8F0F0"
        android:onClick="onClickBoard"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/imageBack"
        app:layout_constraintTop_toTopOf="@+id/imageBack"
        app:strokeColor="#00FFFFFF" />

    <ImageView
        android:id="@+id/mark"
        android:layout_width="303dp"
        android:layout_height="336dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBack"
        app:layout_constraintEnd_toEndOf="@+id/p6"
        app:layout_constraintStart_toStartOf="@+id/imageBack"
        app:layout_constraintTop_toTopOf="@+id/imageBack" />

    <ImageView
        android:id="@+id/win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/HowPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBack" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:onClick="reset"
        android:text="PLAY AGAIN"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />


    />

